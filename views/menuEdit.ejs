<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center"><%= title %></h1>
        </div>
        <div class="card-body">
          <form
            method="post"
            action="/menu/<%= data.id %>/change"
            class="form-horizontal"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label class="form-label control-label" for="email"
                ><strong>Image:</strong></label
              >
              <div class="mb-4 d-flex justify-content-center">
                <img
                  id="selectedImage"
                  src="<%= data.imageUrl %>"
                  alt="example placeholder"
                  style="width: 300px"
                  class="rounded"
                />
              </div>
              <div class="d-flex justify-content-center">
                <div data-mdb-ripple-init class="btn btn-primary btn-rounded">
                  <label class="form-label text-white m-1" for="customFile1"
                    >Choose file</label
                  >
                  <input
                    type="file"
                    class="form-control d-none"
                    id="customFile1"
                    onchange="displaySelectedImage(event, 'selectedImage')"
                    name="image"
                  />
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label control-label" for="name"
                ><strong>Name:</strong></label
              >
              <input
                type="text"
                id="name"
                class="form-control"
                name="name"
                value="<%= data.productName %>"
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-label control-label" for="allergen"
                ><strong>Allergen:</strong></label
              >
              <input
                type="text"
                id="allergen"
                class="form-control"
                name="allergen"
                value="<%= data.allergentIngredients %>"
              />
            </div>
            <div class="mb-3">
              <label class="form-label control-label" for="Description"
                ><strong>Description:</strong></label
              >
              <textarea
                name="description"
                id="description"
                class="form-control"
                required
              >
<%= data.description %></textarea
              >
            </div>
            <div class="mb-3">
              <label class="form-label control-label" for="price"
                ><strong>Price:</strong></label
              >
              <input
                type="number"
                id="price"
                class="form-control"
                name="price"
                value="<%= data.price %>"
                required
              />
            </div>
            <div class="mb-3 py-3">
              <button class="btn btn-primary" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
